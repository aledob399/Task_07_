<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:text="Crazy Layouts"
        android:paddingStart="50px"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/conectar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_weight="0.3"
        android:text="Conectar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_weight="0.3"
        android:hint="Correo" />

    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_weight="0.3"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/iniciar_sesion"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_weight="0.3"
        android:background="@drawable/boton_gris"
        android:backgroundTint="#786F6F"
        android:text="INICIAR SESION"
        android:textColor="@color/black"
        app:rippleColor="#504949" />

    <TextView
        android:id="@+id/olvidaste_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="多Olvidaste tu constrase単a?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0E8AEE" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="Volver" />
</LinearLayout>